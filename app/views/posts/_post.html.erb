<div class="posts-wrapper row">
  <div class="post" style="display: flex; flex-direction: column">
    <div class="post-head">
      <div class="thumb-img"></div>
      <div class="user-name"><%= post.user.user_name %></div>
      <div class="time-ago"><%= time_ago_in_words post.created_at %></div>
    </div>
    <div class="post-bottom">
      <%= post.content %>
      <%= link_to 'View post', post_path(post) %> 
        <div class="comment" id="comments_<%= post.id %>">
          <% if post.comments %>
            <%= render post.comments, post: post  %>
          <% end %>
        </div>
      <div class="comment-like-form row">
        <div class="like-button col-sm-1">
          <i class="bi bi-heart"></i>
        </div>
        <div class="comment-form col-sm-11">
          <%= form_for([post, post.comments.build], remote: true) do |f| %>
            <%= f.text_field :content, placeholder: 'Add a comment...', id: "comment_content_#{post.id}" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
