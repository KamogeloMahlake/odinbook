
<div>
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 registration-bg">
        <div class="log-in panel col-md-4" >
          <div class="panel-heading">
            <h2>Create Your Account</h2>
          </div>


          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= f.error_notification %>
            <div class="panel-body">
              <%= f.input :user_name,
                required: true,
                autofocus: true,
                input_html: { autocomplete: "text", class: "input-lg"}%>

              <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" , class: "input-lg"}%>

              <%= f.input :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" , class: "input-lg"} %>
              <%= f.input :password_confirmation,
                required: true,
                input_html: { autocomplete: "new-password", class: "input-lg" } %>

            </div>
            <div class="form-actions">
              <%= f.button :submit, "Sign up" , class: "btn-lg btn-info btn-block"%>

            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


