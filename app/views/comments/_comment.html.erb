<div class="user-name">
  <% if comment.user %>
    <%= link_to comment.user.user_name, profile_path(comment.user.user_name) %>
  <% end %>
</div>
<div class="comment-content">
  <%= comment.content %>
  <% if current_user && comment.user == current_user %>
    <%= link_to post_comment_path(post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?", post_id: post.id, value: post.comments.count }, remote: true, id: "delete-#{comment.id}", class: "delete-comment" do %>              
      <i class="bi bi-trash"></i>
    <% end %>
  <% end %>
</div>
