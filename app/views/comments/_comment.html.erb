<div class="user-name">
  <% comment.user.user_name %>
</div>
<div class="comment-content">
  <%= comment.content %>
  <% if current_user && comment.user == current_user %>
    <%= link_to post_comment_path(post, comment), data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this post?" }, remote: true do %>              
      <span class="glypgicon glypgicon-remove delete-comment-icon"></span>
    <% end %>
  <% end %>
</div>
